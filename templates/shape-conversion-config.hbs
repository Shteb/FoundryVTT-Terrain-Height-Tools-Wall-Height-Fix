<form>
	<p style="margin-top: 0; font-size: 0.95em;">{{localize "TERRAINHEIGHTTOOLS.ShapeConversionHint"}}</p>

	<label class="flexrow align-items-center">
		<input type="checkbox" name="toDrawing">
		<span>{{localize "TERRAINHEIGHTTOOLS.ConvertToDrawing"}}</span>
	</label>

	<label class="flexrow align-items-center">
		<input type="checkbox" name="toRegion">
		<span>{{localize "TERRAINHEIGHTTOOLS.ConvertToRegion"}}</span>
	</label>

	<label class="flexrow align-items-center">
		<input type="checkbox" name="toWalls">
		<span>{{localize "TERRAINHEIGHTTOOLS.ConvertToWalls"}}</span>
	</label>

	{{#if isWallHeightEnabled}}
	<label class="flexrow align-items-center" style="padding-left: 1rem">
		<input type="checkbox" name="setWallHeightFlags">
		<span>{{localize "TERRAINHEIGHTTOOLS.SetWallHeightFlags"}}</span>
	</label>
	{{/if}}

	<label class="flexrow align-items-center">
		<input type="checkbox" name="deleteAfter">
		<span>{{localize "TERRAINHEIGHTTOOLS.DeleteAfterConversion"}}</span>
	</label>
</form>
